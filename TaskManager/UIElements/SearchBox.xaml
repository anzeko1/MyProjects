<UserControl x:Class="TaskManager.UIElements.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskManager.UIElements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/MainResources.xaml"/>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <Border BorderBrush="LightGray" BorderThickness="2,2,1,2" CornerRadius="5,0,0,5" Width="500" Height="30">
            <TextBox />
        </Border>
        <Border BorderBrush="LightGray" BorderThickness="1,2,2,2" CornerRadius="0,5,5,0" Width="30" Height="30">
            <Button Background="White" >
                <TextBlock FontSize="20px" FontFamily="{StaticResource FontAwesomeFree}" Text="&#xf002;"/>
            </Button>
        </Border>
    </StackPanel>
</UserControl>
